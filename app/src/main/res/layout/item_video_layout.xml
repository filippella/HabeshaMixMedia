<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorRowItem"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/image_video_thumbnail"
            android:layout_width="100dp"
            android:layout_height="96dp"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.dalol.habeshamixmedia.ui.widgets.HMTextView
                android:id="@+id/text_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textStyle="bold"
                app:hm_text_font_style="@string/font_family_futura_bold"
                tools:text="TextView" />

            <org.dalol.habeshamixmedia.ui.widgets.HMTextView
                android:id="@+id/text_video_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorWhite"
                android:visibility="gone"
                app:hm_text_font_style="@string/font_family_futura_light"
                tools:text="TextView" />

            <org.dalol.habeshamixmedia.ui.widgets.HMTextView
                android:id="@+id/text_video_publish_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorWhite"
                app:hm_text_font_style="@string/font_family_futura_light"
                tools:text="TextView" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>