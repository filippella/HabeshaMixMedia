<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimaryDark" />
            <stroke android:width="3dp" android:color="@color/colorLightGray" />
            <size android:width="@dimen/dimen_player_slider_thumb" android:height="@dimen/dimen_player_slider_thumb" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@color/colorTransparentSkyBlue" />
            <stroke android:width="1dp" android:color="@color/colorWhite" />
        </shape>
    </item>
</selector>