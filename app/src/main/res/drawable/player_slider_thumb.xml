            <solid android:color="@color/colorBlue" />
            <stroke android:width="2dip" android:color="@color/colorLightGray" />
            <size android:width="@dimen/dimen_player_slider_thumb" android:height="@dimen/dimen_player_slider_thumb" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <size android:width="@dimen/dimen_player_slider_thumb" android:height="@dimen/dimen_player_slider_thumb" />
            <solid android:color="@color/playerSeek" />
            <stroke android:width="2dip" android:color="@color/colorLightGray" />
        </shape>
    </item>
</selector>